<div id="whole-page">

<div id="to-complete">
  <h2> Reviews to complete: </h2>
  <p>
    <% @reviews.each do |review| %>
      <% if !review_completed?(review) %>
        <% if review.title.length > 1 && review.body.length > 1%>
            <h4> <%= link_to review.group_review.movie.title, "/reviews/#{review.id}" %> </h4>
        <% else %>
          <%= link_to "Create a new review for " + review.group_review.movie.title, "/reviews/#{review.id}" %>
        <% end %>
      <% end %>
    <% end %>
  </p>
</div>

<div id="have-completed">
  <h2> Reviews completed: </h2>
  <% @reviews.each do |review| %>
    <% if review_completed?(review) %>
  <p class="review-info">
    <h4> <%= link_to review.title, "/reviews/#{review.id}" %> </h4>
  </p>
    <% end %>
  <% end %>
</div>

<div id="group-membership">
  <h2> Your groups: </h2>
<p>
  <% @user.groups.each do |group| %>
    <h4> <%= link_to group.group_name, group_path(group.id) %> </h4>
  <% end %>
</p>
</div>
</div>
