<% if @review.title.length > 1 && @review.body.length > 1%>

  <% if !review_completed?(@review) %>
    <%= link_to "Edit this review", "/reviews/#{@review.id}/edit" %>
  <% else %>
     <h2>This review is already published and cannot be edited </h2>
  <% end %>

  <%= @review.title %>
  <br>
  <%= @review.body %>

<% else %>

  <% if !review_completed?(@review) %>
    <h2> Looks like you haven't done this review yet,
      better do it soon so you dont dissapoint Mike </h2>

      <%= form_for @review do |f| %>
        <%= f.label :title %> <br>
        <%= f.text_field :title%>
        <br>
        <br>
        <%= f.label :body %> <br>
        <%= f.text_area :body %>
        <br>
        <br>
        <%= f.submit %>
      <% end %>
  <% else %>
     <h2>You missed the due date and now Mike is mad at you </h2>
  <% end %>


<% end %>
  <%= @user.email %>
